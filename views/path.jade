extends layout
block content
	.row
		.col-md-8
			h3
				=path.title
			p
				=path.description
	.row
		a(id="selectedLink", target="_blank")
		canvas.paths-canvas(id=0, width="600", height="200")
		hr
	if user
		.row
			.editable
			button.btn.btn-danger.discuss Discuss
			br
	.row.comments
		if comments
			each comment in comments
				br
				hr
				.comment(data-id=comment._id)
					!=comment.body
					if comment.replies.length
						button.btn.pull-right Show Replies
					else
					if user
						button(class="btn pull-right replyButton", data-id=comment._id) Discuss

					else
						p.pull-right Login to Discuss
		else
			p No comments!
	script(src='/js/lib/paper-core.min.js', type="text/javascript")
	script(src='/js/displayPath.js', type="text/javascript", onload="decodeEncoded(#{JSON.stringify(path)})")