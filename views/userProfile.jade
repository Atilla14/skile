extends layout
block content
	if profileUser
		.row
			.col-md-8
				if(profileUser.profile.picture)
					img(src=profileUser.profile.picture)
				else
					img(src="#{profileUser.gravatar()}")
				h3
					=profileUser.fullName
				p
					=profileUser.email
				if user.id!=profileUser.id
					button.btn.btn-danger Follow