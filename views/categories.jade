extends layout
block content
	.row.list-group-item
		.col-md-4.col-md-offset-4
			.form-group.col-md-9
				input(placeholder="search", type="text", class="form-control")
			button(class="btn btn-default btn-danger col-md-3") Submit
	.row
	if categories
		each category in categories
			.row.list-group-item
				a(href="/category/"+category._id)
					=category.title
				br
				=category.description
	else
		| 